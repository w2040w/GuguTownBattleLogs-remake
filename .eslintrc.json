{
    "env": {
        "browser": true,
        "es2021": true,
        "jquery": true,
        "greasemonkey": true
    },
    "extends": ["eslint:recommended", "plugin:import/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["warn", 4],
        "quotes": ["warn", "single"],
        "semi": ["warn", "always"],
        "no-var": ["warn"],
        "no-trailing-spaces": ["warn"],
        "array-bracket-spacing": ["warn", "never"],
        "no-unused-vars": ["warn"]
    },
    "globals": {
        "md5": "readonly"
    }
}
